<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="16dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/icon_book_boy"
                android:layout_width="52dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/image1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sub_title"
                android:layout_toRightOf="@+id/icon_book_boy"
                android:text="Exam Announcement"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/icon_book_boy"
                android:paddingBottom="7dp"
                android:text="Exam Announcement" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/rel_top"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/rl_middle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/view_line"
            android:gravity="bottom"
            android:padding="7dp">

            <TextView
                android:id="@+id/date_second_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_rightarrow"
                android:padding="4dp"
                android:text="25th March 2016 to 4th April 2016"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_second_row"
                android:padding="4dp"
                android:text="8A 88 8C"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_middle"
            android:background="@color/colorBorder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line2"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/number_replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:text="21 Replies" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/number_replies"
                android:paddingLeft="10dp"

                android:text="30 Signed it" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/chat"
                android:background="@drawable/forlinebottom"
                android:padding="10dp"
                android:src="@drawable/ic_share" />

            <ImageView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/signature"
                android:background="@drawable/forlinebottom"
                android:padding="10dp"
                android:src="@drawable/ic_chat" />

            <ImageView
                android:id="@+id/signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/forlinebottom"
                android:padding="10dp"
                android:src="@drawable/ic_signature" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>